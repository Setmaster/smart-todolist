<div id="registerModal" class="register-modal-container">
    <div class="form-container">
        <span class="close">&times;</span>
        <form class="login-form" action="/api/users/createUser" method="POST">
            <label class="label-name" for="register-name">Name</label>
            <input type="text" name="name" id="register-name" placeholder="name">
            <label class="label-user" for="register-email">Email</label>
            <input type="text" name="email" id="register-email" placeholder="email">
            <label class="label-pass" for="register-password">Password</label>
            <input type="password" name="password" id="register-password" placeholder="Password">
            <button type="submit" class="btn btn-register">REGISTER</button>
        </form>
    </div>
</div>
