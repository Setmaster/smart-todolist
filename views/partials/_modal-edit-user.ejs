<div id="editUserModal" class="modal-container">
    <div class="form-container">
        <span class="close">&times;</span>
        <form class="modal-form" action="/api/users/<%= userId %>/update" method="POST">
            <label class="label-name" for="name">Name</label>
            <input type="text" name="name" id="name" placeholder="Change name" value="<%= userName %>">
            <label class="label-pass" for="password">Password</label>
            <input type="password" name="password" id="password" placeholder="Change password">
            <button type="submit" class="btn">Save New Info</button>
        </form>
    </div>
</div>
