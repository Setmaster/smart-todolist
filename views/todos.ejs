                    </g></svg>
            </li>
        </ul>
    </div>
    <div class="todo-container">
        <div class="addToDo-box">
            <input type="text" name="search" placeholder="Write your todo">
            <i id="addTodo" class="fa-solid fa-plus fa-2xl"></i>
        </div>
        <div class="todo-list-container">
            <div class="todo-list-header">
                <h2 class="category-title"><%= categoryName %></h2>
            </div>
            <ul class="todo-list">
                <% if (todos.length > 0) { %>
                    <% todos.forEach(function(todo) { %>
                        <li data-id="<%= todo.id %>" data-title="<%= todo.title %>" data-category="<%= todo.category %>">
                            <div class="todo-list-name">
                                <input type="checkbox" class="todo-checkbox" <%= todo.complete_date ? 'checked' : '' %>>
                                <p><%= todo.title %></p>
                            </div>
                            <div class="todo-list-edit">
                                <i class="fas fa-edit"></i>
                                <i class="fa-solid fa-trash"></i>
                            </div>
                        </li>
                    <% }); %>
                <% } else { %>
                    <p class="noTodos">No todos found for this category.</p>
                <% } %>
            </ul>
        </div>
    </div>

</section>
</body>

</html>
